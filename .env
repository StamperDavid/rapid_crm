# Rapid CRM Environment Configuration
# This file contains environment variables for the Rapid CRM application
# DO NOT commit this file to version control - it contains sensitive information

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Frontend API Configuration (for production builds)
VITE_API_HOST=localhost
VITE_API_PORT=3001
VITE_API_PROTOCOL=http
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database path (relative to project root)
DATABASE_PATH=instance/rapid_crm.db

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# These are fallback values - actual API keys should be managed through the UI
# The application will prioritize keys stored in the database over these values

# OpenRouter API (for AI chat functionality)
# Get your key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Unreal Speech API (for text-to-speech)
# Get your key from: https://unrealspeech.com/
UNREAL_SPEECH_API_KEY=your_unreal_speech_api_key_here

# =============================================================================
# ELD COMPLIANCE SETTINGS
# =============================================================================
ELD_AUTOMATION_ENABLED=true
ELD_COMPLIANCE_MONITORING=true

# =============================================================================
# IFTA COMPLIANCE SETTINGS
# =============================================================================
IFTA_QUARTERLY_AUTOMATION=true

# =============================================================================
# AI AGENT INTEGRATION
# =============================================================================
AI_AGENT_INTEGRATION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session secret for JWT tokens (change this in production)
SESSION_SECRET=your_secure_session_secret_here

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,avi,mov

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable hot reload in development
HOT_RELOAD=true

# Enable debug mode
DEBUG_MODE=true
